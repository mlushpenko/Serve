<%= link_to 'Show all books', categories_path %>

<% if @books.empty? %>
<br />
Oops! No books have been added to this category yet.
<% else %>
<table class="table table-hover">
  <tr>
    <th>Image </th> <!--maybe this delimiter - inline style. Better to get rid of him later-->
    <th>Title 
    <%= link_to "", {:controller => "categories", :action => "index", :ord => "asc", :id => params[:id]},
    :class => "icon-circle-arrow-up" %>
    <%= link_to "", {:controller => "categories", :action => "index", :ord => "desc", :id => params[:id]},
    :class => "icon-circle-arrow-down" %>
    </th>
    <th>Category </th>
    <th>Author </th>
    <th>Description</th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.image %></td>
    <td><%= link_to book.title, book_path(book) %></td>
    <td><%= book.category_id %></td>
    <td><%= book.author %></td>
    <td><%= book.description %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>
<% end %>
<br />

