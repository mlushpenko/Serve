.row-fluid
  .span3
    .well.sidebar-nav
      = link_to 'Admin control', admin_root_path
      %ul.nav.nav-list
        %li.nav-header Categories
        - @categories.each do |category|
          %li= link_to (category.name + " (#{category.books.count})"), :controller => 'categories', :action => 'index', :id => category
  .span9.well.well-small
    = render :template => 'books/index'
